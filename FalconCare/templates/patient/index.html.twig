{% extends 'base.html.twig' %}

{% block title %}Patient index{% endblock %}

{% block body %}
    <h1>Patient index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>IdentityDocument</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>SsNumber</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Address</th>
                <th>ConsultationReason</th>
                <th>FamilyHistory</th>
                <th>HealthStatus</th>
                <th>LifestyleHabits</th>
                <th>RegistrationDate</th>
                <th>MedicationAllergies</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for patient in patients %}
            <tr>
                <td>{{ patient.id }}</td>
                <td>{{ patient.identityDocument }}</td>
                <td>{{ patient.firstName }}</td>
                <td>{{ patient.lastName }}</td>
                <td>{{ patient.ssNumber }}</td>
                <td>{{ patient.phone }}</td>
                <td>{{ patient.email }}</td>
                <td>{{ patient.address }}</td>
                <td>{{ patient.consultationReason }}</td>
                <td>{{ patient.familyHistory }}</td>
                <td>{{ patient.healthStatus }}</td>
                <td>{{ patient.lifestyleHabits }}</td>
                <td>{{ patient.registrationDate ? patient.registrationDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ patient.medicationAllergies }}</td>
                <td>
                    <a href="{{ path('app_patient_show', {'id': patient.id}) }}">show</a>
                    <a href="{{ path('app_patient_edit', {'id': patient.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="15">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_patient_new') }}">Create new</a>
{% endblock %}
